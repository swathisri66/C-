/* Program to read two numbers and perform arithmetic operations on them */

#include<stdio.h>

int main()
{
  int a,b,c;
  printf("Enter any two numbers : ");
  scanf("%d %d",&a,&b);
  c = a + b;
  printf("\nSum = %d",c);
  c = a - b;
  printf("\n Difference = %d",c);
  c = a * b;
  printf("\nProduct = %d",c);
  c = a / b;
  printf("\nDivisoin = %d",c);
  c = a % b;
  printf("\nRemainder = %d",c);
}

