/* Program to read two numbers and perform arithmetic operations on them */

#include<stdio.h>

int main()
{
  int a,b;
  printf("Enter any two numbers : ");
  scanf("%d %d",&a,&b);
  printf("\nSum = %d",a + b);
  printf("\n Difference = %d",a - b);
  printf("\nProduct = %d",a * b);
  printf("\nDivisoin = %d",a / b);
  printf("\nRemainder = %d",a % b);
}

