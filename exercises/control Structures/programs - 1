/* Program to read two numbers and perform arithmetic operations on them */

#include<stdio.h>

int main()
{
  float a,b;
  printf("Enter any two numbers : ");
  scanf("%f %f",&a,&b);
  printf("\nSum = %f",a + b);
  printf("\n Difference = %f",a - b);
  printf("\nProduct = %f",a * b);
  printf("\nDivisoin = %f",a / b);
//  printf("\nRemainder = %f",a % b); => Error
}

