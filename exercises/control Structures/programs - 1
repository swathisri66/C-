/* Program to read radius of Circle, calculate and print its area and 
perimeter */

#include<stdio.h>
#include<math.h>

int main()
{
  float r,area,peri;
  printf("Enter value for radius : ");
  scanf("%f",&r);
  area = M_PI * r * r;
  peri = 2 * M_PI * r;
  printf("\nArea of Circle = %f",area);
  printf("\nPerimeter of Circle = %f",peri);
}

